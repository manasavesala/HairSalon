@{
  Layout = "_Layout";
}
<div class="container text-center">
    <h1>Stylists List</h1>
    <h4>To see the clients click the stylist</h4>

    @if (@Model.Count == 0)
    {
    <h3>No Stylists Added yet!</h3>
    }

    @foreach (var Stylists in Model)
    {
    <h3><a href='/stylists/@Stylists.GetId()'>@Stylists.GetStylistName()|| <a href="stylist/@Stylists.GetId()/specialties">View Specialties</a> </a></h3>

    <button class="btn btn-success btn-outline-dark"><a href='/stylists/@Stylists.GetId()/details'>Stylist Details</a></button>
    <button class="btn btn-danger btn-outline-dark"><a href='/stylists/@Stylists.GetId()/delete'>Delete Stylist</a></button>
    <button class="btn btn-warning btn-outline-dark"><a href='/stylists/@Stylists.GetId()/edit'>Edit Stylist Details</a></button>
    <button class="btn btn-info btn-outline-dark"><a href="/clients/new">Add new Client</a></button>
    
    <br>

    }



    <h3><a href="/stylists/new">Add new Stylist</a></h3>
    <h2> <a href="/stylists/assign">Assign Stylists to specialties</a></h2>
    <h3><a href='/'>Back home</a></h3>
</div>