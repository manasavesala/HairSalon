@{
  Layout = "_Layout";
}

<h2 class="text-center">Add Stylist</h2>
<div class="container text-center" >


    <form action="/stylists/new" method="post">
    <label for="stylistname">Stylist Name: </label>
    <input type="text" name="Stylistname"><br><br>
    <label for="location">Stylist Location: </label>
    <input type="text" name="location"><br><br>
    <label for="rating">Stylist Rating: </label>
    <input type="text" name="rating"><br><br>
    <button type="submit" class="btn btn-lg btn-primary">Add</button>
    </form>
    <h3><a href="/stylists">Back to Stylists List</a></h3>
</div>