@{
  Layout = "_Layout";
}

<div class="container text-center">
    <h1>Specialties List </h1>

    @if(@Model.Count == 0)
    {
    <h3>No Specialty Added yet! </h3>
    }

    @foreach(var specialties in Model)
    {
    <h3><a href="/specialties/@specialties.GetId()">@specialties.GetName() || <a href="specialty/@specialties.GetId()/stylists">View Stylists</a> </a> </h3>
    <button class="btn btn-danger"><a href="/specialties/@specialties.GetId()/delete">Delete Client </a></button>
    <br>
    
    }
    <h3><a href="/specialties/new">Add Specialty </a></h3>

    <h3><a href='/'>Back home </a></h3>
</div>