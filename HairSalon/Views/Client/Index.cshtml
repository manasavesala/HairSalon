@{
  Layout = "_Layout";
}
<div class="container text-center">
    <h1>Clients List</h1>

    @if (@Model.Count == 0)
    {
    <h3>No Clients Added yet!</h3>
    }

    @foreach (var Clients in Model)
    {
    <h3><a href='/clients/@Clients.GetId()'>@Clients.GetName()</a></h3>
    <button class="btn btn-success"><a href='/clients/@Clients.GetId()/edit'>Edit Client</a></button>
    <button class="btn btn-danger"><a href='/clients/@Clients.GetId()/delete'>Delete Client</a></button>
    <br>
    
    }

    <h3><a href="/clients/delete">Delete All Clients</a></h3>
    <h3><a href='/'>Back home</a></h3>
</div>